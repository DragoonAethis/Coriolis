<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{{ ticket.prefixed_code }}@{{ render.variant }}</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
<div
        class="background"
        {% if render.image and render.variant != "back" %}
        style="background-image: url('{{ render.image }}') !important"
        {% endif %}
></div>

<div class="bar top-bar"
        {% if ticket_type.short_name == "VIP" %}
     style="background: radial-gradient(ellipse farthest-corner at right bottom, #FEDB37 0%, #FDB931 8%, #9f7928 30%, #8A6E2F 40%, transparent 80%),
                         radial-gradient(ellipse farthest-corner at left top, #FFFFFF 0%, #FFFFAC 8%, #D1B464 25%, #5d4a1f 62.5%, #5d4a1f 100%) !important"
        {% elif ticket_type.color %}
     style="background-color: {{ ticket_type.color }} !important"
        {% endif %}
></div>

<div class="text-top-bar text-role">{{ ticket_type.short_name }}</div>
<div class="text-top-bar text-code">{{ ticket.prefixed_code }}</div>

<div class="text-festiwal">Festiwal</div>
<div class="text-remcon">Remcon</div>
<div class="text-2024">2024</div>

{% if ticket.nickname %}
    <div class="text-nick">{{ ticket.nickname }}</div>
{% endif %}

<div class="bar bottom-bar"
        {% if ticket_type.short_name == "VIP" %}
     style="background: radial-gradient(ellipse farthest-corner at right bottom, #FEDB37 0%, #FDB931 8%, #9f7928 30%, #8A6E2F 40%, transparent 80%),
                         radial-gradient(ellipse farthest-corner at left top, #FFFFFF 0%, #FFFFAC 8%, #D1B464 25%, #5d4a1f 62.5%, #5d4a1f 100%) !important"
        {% elif ticket_type.color %}
     style="background-color: {{ ticket_type.color }} !important"
        {% endif %}
></div>
<div class="text-bottom">23-25 LUTEGO 2024 &nbsp;|&nbsp; AMBEREXPO GDA≈ÉSK</div>
</body>
</html>
